{
  "kind": "collectionType",

  "collectionName": "contact_forms",
  "info": {
    "singularName": "contact-form",
    "pluralName": "contact-forms",
    "displayName": "contact-form"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "maxLength": 255
    },
    "email": {
      "type": "email",
      "required": true
    },
    "phone": {
      "type": "string",
      "maxLength": 50
    },
    "message": {
      "type": "text",
      "required": true
    },
    "privacyAccepted": {
      "type": "boolean",
      "default": false,
      "required": true
    },
    "submittedAt": {
      "type": "datetime"
    },
    "emailSent": {
      "type": "boolean",
      "default": false
    },
    "emailSentAt": {
      "type": "datetime"
    },
    "emailMessageId": {
      "type": "string"
    },
    "emailError": {
      "type": "text"
    },
    "emailAttemptedAt": {
      "type": "datetime"
    }
  }
}